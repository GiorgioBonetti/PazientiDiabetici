<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pazienti.controller.dottore.DashboardController">

    <!-- TOP: Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12.0">
            <children>
                <Label fx:id="titleLabel" text="Telemedicina T2D — Dashboard" />
                <Pane HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchBar" prefWidth="320.0" promptText="Cerca paziente..." />
                <Button fx:id="searchButton" text="Cerca" />
                <MenuButton text="Account">
                    <items>
                        <MenuItem fx:id="profileButton" text="Profilo" />
                        <MenuItem fx:id="logoutButton" text="Esci" />
                    </items>
                </MenuButton>
            </children>
            <padding>
                <Insets bottom="10.0" left="12.0" right="12.0" top="10.0" />
            </padding>
        </HBox>
    </top>

    <!-- LEFT: Navigazione -->
    <left>
        <VBox spacing="8.0">
            <children>
                <Label text="Navigazione" />
                <ToggleButton fx:id="pazientiButton" onAction="#handlePazienti" text="Pazienti" />
                <ToggleButton fx:id="terapieButton" onAction="#handleTerapie" text="Terapie" />
                <ToggleButton fx:id="alertButton" onAction="#handleAlert" text="Alert" />
                <Separator />
                <ToggleButton fx:id="impostazioniButton" text="Impostazioni" />
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </left>

    <!-- CENTER: Contenuti -->
    <center>
        <VBox spacing="12.0">
            <children>
                <!-- Grafico trend glicemico medio settimanale -->
                <TitledPane expanded="true" text="Trend glicemia media (ultime 8 settimane)">
                    <content>
                        <LineChart animated="false" prefHeight="260.0">
                            <xAxis>
                                <CategoryAxis label="Settimana" />
                            </xAxis>
                            <yAxis>
                                <NumberAxis label="mg/dL" />
                            </yAxis>
                        </LineChart>
                    </content>
                </TitledPane>

                <!-- Tabella priorità pazienti -->
                <TitledPane expanded="true" text="Pazienti prioritari">
                    <content>
                        <TableView prefHeight="360.0">
                            <columns>
                                <TableColumn prefWidth="200.0" text="Paziente" />
                                <TableColumn prefWidth="170.0" text="% Out-of-Range (7g)" />
                                <TableColumn prefWidth="130.0" text="Aderenza 7g" />
                                <TableColumn prefWidth="150.0" text="Ultima glicemia" />
                                <TableColumn prefWidth="140.0" text="Alert" />
                            </columns>
                        </TableView>
                    </content>
                </TitledPane>
            </children>
            <padding>
                <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
            </padding>
        </VBox>
    </center>


    <!-- BOTTOM: status bar -->
    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="Pronto" />
            </children>
            <padding>
                <Insets bottom="8.0" left="12.0" right="12.0" top="8.0" />
            </padding>
        </HBox>
    </bottom>

</BorderPane>
