<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10">
    <children>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Centro Alert" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <ComboBox fx:id="cmbSeverita" promptText="Severità"/>
                <ComboBox fx:id="cmbPeriodo" promptText="Periodo"/>
                <CheckBox text="Solo aperti" fx:id="chkAperti"/>
                <Button text="Aggiorna" fx:id="btnRefresh"/>
            </children>
        </HBox>

        <TableView fx:id="tblAlert" prefHeight="620.0">
            <columns>
                <TableColumn text="Paziente" prefWidth="200"/>
                <TableColumn text="Tipo" prefWidth="220"/>
                <TableColumn text="Severità" prefWidth="120"/>
                <TableColumn text="Messaggio" prefWidth="420"/>
                <TableColumn text="Prima segnalazione" prefWidth="160"/>
                <TableColumn text="Ultimo aggiornamento" prefWidth="160"/>
                <TableColumn text="Stato" prefWidth="120"/>
                <TableColumn text="Azioni" prefWidth="160"/>
            </columns>
            <placeholder><Label text="Nessun alert"/></placeholder>
        </TableView>
    </children>
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
</VBox>
