<StackPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <children>
        <VBox alignment="CENTER" spacing="15.0">
            <children>
                <Label text="Telemedicina T2D" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
                <TextField fx:id="usernameField" promptText="Username" prefWidth="220.0"/>
                <PasswordField fx:id="passwordField" promptText="Password" prefWidth="220.0"/>
                <Button text="Accedi" prefWidth="220.0" fx:id="loginButton"/>
            </children>
            <padding><Insets top="40" right="20" bottom="40" left="20"/></padding>
        </VBox>
    </children>
</StackPane>
