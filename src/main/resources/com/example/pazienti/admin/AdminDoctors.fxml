<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10">
    <children>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Medici" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Button text="Nuovo Medico" fx:id="btnNewDoctor"/>
                <Button text="Aggiorna" fx:id="btnRefresh"/>
            </children>
        </HBox>

        <TableView fx:id="tblDoctors" prefHeight="620.0">
            <columns>
                <TableColumn fx:id="colNome" text="Nome" prefWidth="160"/>
                <TableColumn fx:id="colCognome" text="Cognome" prefWidth="160"/>
                <TableColumn fx:id="colEmail" text="Email" prefWidth="220"/>
                <TableColumn fx:id="colTelefono" text="Telefono" prefWidth="140"/>
                <TableColumn fx:id="colSpec" text="Specializzazione" prefWidth="220"/>
                <TableColumn fx:id="colAzioni" text="Azioni" prefWidth="160"/>
            </columns>
            <placeholder><Label text="Nessun medico"/></placeholder>
        </TableView>
    </children>
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
</VBox>
