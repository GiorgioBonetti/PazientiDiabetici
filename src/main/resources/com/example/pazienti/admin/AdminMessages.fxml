<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefWidth="1200.0" prefHeight="800.0">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Messaggi Paziente â†’ Medico" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <ComboBox fx:id="cmbFiltroPaziente" promptText="Filtra per paziente"/>
                <ComboBox fx:id="cmbFiltroMedico" promptText="Filtra per medico"/>
                <Button text="Aggiorna" fx:id="btnRefresh"/>
            </children>
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.45">
            <items>
                <TableView fx:id="tblMessages">
                    <columns>
                        <TableColumn text="Data/Ora" prefWidth="160"/>
                        <TableColumn text="Paziente" prefWidth="200"/>
                        <TableColumn text="Medico" prefWidth="200"/>
                        <TableColumn text="Oggetto" prefWidth="260"/>
                        <TableColumn text="Stato invio" prefWidth="120"/>
                    </columns>
                    <placeholder><Label text="Nessun messaggio"/></placeholder>
                </TableView>

                <VBox spacing="8">
                    <children>
                        <Label text="Dettaglio messaggio" style="-fx-font-weight: bold;"/>
                        <TextArea fx:id="txtDetail" editable="false" prefRowCount="20"/>
                        <HBox spacing="10" alignment="CENTER_RIGHT">
                            <children>
                                <Button text="Apri in posta" fx:id="btnOpenMail"/>
                                <Button text="Esporta .eml" fx:id="btnExportEml"/>
                            </children>
                        </HBox>
                    </children>
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
