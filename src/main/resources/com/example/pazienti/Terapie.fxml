<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Gestione Terapie" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Button text="Aggiungi Terapia" fx:id="btnAddTerapia"/>
            </children>
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
        </HBox>
    </top>
    <center>
        <TableView fx:id="tblTerapie">
            <columns>
                <TableColumn text="Paziente" prefWidth="200"/>
                <TableColumn text="Farmaco" prefWidth="200"/>
                <TableColumn text="Dosaggio" prefWidth="150"/>
                <TableColumn text="Frequenza" prefWidth="150"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
