<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10" prefHeight="800.0" prefWidth="1200.0">
    <children>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Patologie" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Button text="Aggiungi patologia" fx:id="btnAddPatologia"/>
                <Button text="Aggiorna" fx:id="btnRefresh"/>
            </children>
        </HBox>

        <TableView fx:id="tblPatologie">
            <columns>
                <TableColumn text="Patologia" prefWidth="240"/>
                <TableColumn text="Data diagnosi" prefWidth="160"/>
                <TableColumn text="In corso" prefWidth="120"/>
                <TableColumn text="Note" prefWidth="360"/>
                <TableColumn text="Azioni" prefWidth="140"/>
            </columns>
            <placeholder><Label text="Nessuna patologia"/></placeholder>
        </TableView>
    </children>
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
</VBox>
