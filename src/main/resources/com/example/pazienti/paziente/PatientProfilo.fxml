<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fitToWidth="true" fx:controller="com.example.pazienti.controller.paziente.PatientProfiloController">
    <content>
        <VBox spacing="12" prefWidth="900.0">
            <children>
                <Label fx:id="titleLabel" text="Profilo Paziente" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Separator/>
                <GridPane hgap="10" vgap="8">
                    <children>
                        <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="nomeTextField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Cognome:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <TextField fx:id="cognomeTextField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Data di nascita:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="dataNascitaDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                        <TextField fx:id="emailTextField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                        <Label text="Telefono:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                        <TextField fx:id="phoneTextField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                    </children>
                </GridPane>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <children>
                        <Button text="Salva" fx:id="saveButton"/>
                    </children>
                </HBox>
            </children>
            <padding><Insets top="10" right="10" bottom="20" left="10"/></padding>
        </VBox>
    </content>
</ScrollPane>
