<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pazienti.controller.paziente.PatientGlicemieController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Glicemie" />
                <Button fx:id="addMisurazioneButton" onAction="#handleAddMisurazione" text="Aggiungi misurazione" />
                <ComboBox fx:id="periodoComboBox" promptText="Periodo" />
                <Button fx:id="refreshButton" onAction="#handleRefresh" text="Aggiorna" />
            </children>
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
        </HBox>
    </top>

    <center>
        <VBox spacing="12">
            <children>
                <TitledPane expanded="true" text="Andamento">
                    <content>
                        <LineChart fx:id="chartGlicemie" animated="false" prefHeight="300.0">
                            <xAxis><CategoryAxis label="Data" /></xAxis>
                            <yAxis><NumberAxis label="mg/dL" /></yAxis>
                        </LineChart>
                    </content>
                </TitledPane>

                <TitledPane expanded="true" text="Misurazioni">
                    <content>
                        <TableView fx:id="tblGlicemie" prefHeight="360.0">
                            <columns>
                                <TableColumn fx:id="colDataOra" prefWidth="160" text="Data/Ora" />
                                <TableColumn fx:id="colContesto" prefWidth="160" text="Contesto" />
                                <TableColumn fx:id="colValore" prefWidth="140" text="Valore (mg/dL)" />
                                <TableColumn fx:id="colNote" prefWidth="300" text="Note" />
                                <TableColumn fx:id="colAzioni" prefWidth="140" text="Azioni" />
                            </columns>
                            <placeholder><Label text="Nessuna misurazione" /></placeholder>
                        </TableView>
                    </content>
                </TitledPane>
            </children>
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
        </VBox>
    </center>
</BorderPane>
