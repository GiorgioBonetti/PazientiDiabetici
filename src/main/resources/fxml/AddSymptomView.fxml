<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="dialog-root" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univr.diabete.controller.AddSymptomController">

    <VBox alignment="TOP_CENTER" maxWidth="620" prefHeight="420" prefWidth="360" spacing="18" style="-fx-padding: 24;"
          styleClass="dialog-card">

        <Label styleClass="dialog-title" text="Nuovo sintomo"/>

        <VBox spacing="12" style="-fx-padding: 6 0 0 0;">

            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Descrizione"/>
                <TextField fx:id="descrizioneField" styleClass="field-control"/>
            </VBox>

            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Intensita (1-10)"/>
                <TextField fx:id="intensitaField" styleClass="field-control"/>
            </VBox>

            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Frequenza (opzionale)"/>
                <TextField fx:id="frequenzaField" styleClass="field-control"/>
            </VBox>

            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Note aggiuntive"/>
                <TextArea fx:id="noteField" prefRowCount="3" styleClass="field-control"/>
            </VBox>

        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="12">
            <Button onAction="#handleCancel" styleClass="btn-ghost" text="Annulla"/>
            <Button onAction="#handleSave" styleClass="btn-primary" text="Salva sintomo"/>
        </HBox>
    </VBox>
</StackPane>
