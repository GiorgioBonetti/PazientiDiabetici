<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="16" style="-fx-padding: 8 16 16 16;" stylesheets="@../css/app.css"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.univr.diabete.controller.AdminPatientsController">

    <VBox spacing="4">
        <Label styleClass="page-title" text="Pazienti"/>
    </VBox>

    <HBox alignment="CENTER_LEFT" spacing="12">
        <Pane HBox.hgrow="ALWAYS"/>
        <TextField fx:id="searchField" prefWidth="280" promptText="Cerca per nome, CF, email o diabetologo"
                   styleClass="rounded-field"/>
        <Button onAction="#handleCreatePatient" styleClass="btn-primary" text="Crea paziente"/>
    </HBox>

    <BorderPane styleClass="card" VBox.vgrow="ALWAYS">
        <center>
            <ListView fx:id="patientsListView" prefHeight="420.0"
                      style="-fx-background-color: transparent; -fx-padding: 10;"/>
        </center>
    </BorderPane>
</VBox>
