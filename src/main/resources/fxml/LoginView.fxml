<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="root-bg" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univr.diabete.controller.LoginController">

    <VBox alignment="CENTER" prefWidth="450" spacing="16">
        <Label styleClass="app-title-main" text="Gestione diabete tipo 2"/>

        <BorderPane maxWidth="420" prefWidth="420" styleClass="login-card">
            <center>
                <VBox spacing="14">
                    <Label styleClass="page-title" text="Accedi al tuo account"/>

                    <VBox spacing="6">
                        <Label styleClass="field-label" text="Email"/>
                        <TextField fx:id="emailField" promptText="nome.cognome@example.com"
                                   styleClass="field-control"/>
                    </VBox>

                    <VBox spacing="6">
                        <Label styleClass="field-label" text="Password"/>
                        <PasswordField fx:id="passwordField" promptText="••••••••"
                                       styleClass="field-control"/>
                    </VBox>

                    <HBox alignment="CENTER_RIGHT">
                        <Hyperlink fx:id="forgotPasswordLink" styleClass="sidebar-footer-link"
                                   text="Password dimenticata?"/>
                    </HBox>

                    <Button fx:id="loginButton" onAction="#handleLogin" styleClass="btn-primary" text="Accedi"/>

                    <Label fx:id="loginErrorLabel" managed="false" styleClass="error-label"
                           visible="false"/>
                </VBox>
            </center>
        </BorderPane>

        <Label styleClass="app-title-sub"
               text="Servizio sperimentale di telemedicina per pazienti con diabete di tipo 2."/>
    </VBox>
</StackPane>
