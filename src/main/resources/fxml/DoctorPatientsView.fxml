<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" style="-fx-padding: 8 16 16 16;" stylesheets="@../css/app.css"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.univr.diabete.controller.DoctorPatientsController">

    <!-- Header pagina -->
    <VBox spacing="4">
        <Label styleClass="page-title" text="Pazienti"/>
    </VBox>

    <!-- Barra di ricerca -->
    <!-- HEADER PAGINA PAZIENTI -->
    <HBox alignment="CENTER_LEFT" spacing="12">
        <!-- riempie lo spazio in mezzo -->
        <Pane HBox.hgrow="ALWAYS"/>

        <!-- campo di ricerca esistente -->
        <TextField fx:id="searchField" promptText="Cerca per nome, cognome o ID" styleClass="field-control"/>
    </HBox>

    <!-- Tabella pazienti -->
    <ScrollPane fitToWidth="true" hbarPolicy="NEVER" style="-fx-background-color: transparent;">
        <VBox fx:id="patientsContainer" spacing="10" styleClass="card-body"/>
    </ScrollPane>

</VBox>
