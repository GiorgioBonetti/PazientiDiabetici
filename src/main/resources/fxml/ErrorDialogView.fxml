<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.univr.diabete.controller.ErrorDialogController"
            style="-fx-background-color: rgba(0,0,0,0.35);">

    <VBox fx:id="card"
          spacing="16"
          alignment="CENTER"
          prefWidth="360"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          style="-fx-background-color: white;
                 -fx-padding: 24;
                 -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 18, 0.2, 0, 4);">

        <Label fx:id="titleLbl"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

        <Label fx:id="messageLbl"
               wrapText="true"
               alignment="CENTER"
               style="-fx-font-size: 14px; -fx-text-fill: #444;"/>

        <Button fx:id="okBtn"
                text="OK"
                style="-fx-background-color: #EF4444;
                       -fx-text-fill: white;
                       -fx-background-radius: 12;
                       -fx-padding: 10 18;
                       -fx-font-size: 14px;"/>
    </VBox>
</AnchorPane>
