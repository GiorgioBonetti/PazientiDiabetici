<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="16" styleClass="dialog-root" stylesheets="@../css/app.css"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.univr.diabete.controller.EditGlicemiaController">

    <padding>
        <Insets bottom="20" left="24" right="24" top="20"/>
    </padding>
    <VBox prefWidth="320" spacing="16" styleClass="dialog-card">

        <padding>
            <Insets bottom="20" left="24" right="24" top="20"/>
        </padding>

        <Label styleClass="dialog-title" text="Modifica misurazione"/>

        <VBox spacing="4">
            <Label styleClass="dialog-field-label" text="Registrata il"/>
            <Label fx:id="dateLabel" styleClass="page-subtitle" text="â€”"/>
        </VBox>

        <VBox spacing="6">
            <Label styleClass="dialog-field-label" text="Valore (mg/dL)"/>
            <TextField fx:id="valueField" styleClass="field-control"/>
        </VBox>

        <VBox spacing="6">
            <Label styleClass="dialog-field-label" text="Momento"/>
            <ChoiceBox fx:id="momentChoice" prefHeight="37.0" prefWidth="274.0" styleClass="btn-ghost"/>
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="10">

            <Button onAction="#handleCancel" styleClass="btn-ghost" text="Annulla"/>
            <Button onAction="#handleSave" styleClass="btn-primary" text="Salva"/>
        </HBox>

    </VBox>
</VBox>
