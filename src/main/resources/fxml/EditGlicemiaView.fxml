<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.univr.diabete.controller.EditGlicemiaController"
           styleClass="dialog-root"
            spacing="16"
             alignment="CENTER"
           stylesheets="@../css/app.css"
>

    <children>
        <VBox spacing="16"
              prefWidth="320"
              styleClass="dialog-card">

            <children>

                <Label text="Modifica misurazione"
                       styleClass="dialog-title"/>

                <Label fx:id="dateLabel"
                       styleClass="dialog-subtitle"
                       wrapText="true"/>

                <VBox spacing="6">
                    <children>
                        <Label text="Valore (mg/dL)" styleClass="dialog-field-label"/>
                        <TextField fx:id="valueField" styleClass="field-control"/>
                    </children>
                </VBox>

                <VBox spacing="6">
                    <children>
                        <Label text="Momento" styleClass="dialog-field-label"/>
                        <ChoiceBox fx:id="momentChoice" styleClass="btn-ghost"/>
                    </children>
                </VBox>

                <HBox spacing="10" alignment="CENTER_RIGHT">
                    <children>
                        <Button text="Annulla" onAction="#handleCancel" styleClass="btn-ghost"/>
                        <Button text="Salva" onAction="#handleSave" styleClass="btn-primary"/>
                    </children>

                </HBox>

            </children>
            <padding>
                <Insets top="20" right="24" bottom="20" left="24"/>
            </padding>
        </VBox>
    </children>
    <padding>
        <Insets top="20" right="24" bottom="20" left="24"/>
    </padding>
</VBox>