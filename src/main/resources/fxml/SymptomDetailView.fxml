<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="dialog-root" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univr.diabete.controller.SymptomDetailController">

    <VBox maxWidth="620" prefHeight="360" prefWidth="360" spacing="14" style="-fx-padding: 24;" styleClass="dialog-card">

        <Label styleClass="dialog-title" text="Dettaglio sintomo" />

        <VBox spacing="10">
            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Descrizione" />
                <Label fx:id="descrizioneLabel" styleClass="page-title-accent" text="—" />
            </VBox>

            <HBox spacing="12">
                <VBox spacing="4">
                    <Label styleClass="dialog-field-label" text="Intensità" />
                    <Label fx:id="intensitaLabel" styleClass="page-subtitle" text="—" />
                </VBox>
                <VBox spacing="4">
                    <Label styleClass="dialog-field-label" text="Frequenza" />
                    <Label fx:id="frequenzaLabel" styleClass="page-subtitle" text="—" />
                </VBox>
            </HBox>

            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Note" />
                <Label fx:id="noteLabel" styleClass="page-subtitle" text="—" wrapText="true" />
            </VBox>

            <HBox spacing="12">
                <VBox spacing="4">
                    <Label styleClass="dialog-field-label" text="Periodo" />
                    <Label fx:id="periodoLabel" styleClass="page-subtitle" text="—" />
                </VBox>
                <VBox spacing="4">
                    <Label styleClass="dialog-field-label" text="Registrato" />
                    <Label fx:id="timestampLabel" styleClass="page-subtitle" text="—" />
                </VBox>
            </HBox>
        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="12">
            <Button onAction="#handleClose" styleClass="btn-primary" text="Chiudi" />
        </HBox>
    </VBox>
</StackPane>
