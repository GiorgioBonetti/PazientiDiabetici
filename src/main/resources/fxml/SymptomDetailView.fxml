<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           stylesheets="@../css/app.css"
           fx:controller="it.univr.diabete.controller.SymptomDetailController"
           styleClass="dialog-root">

    <VBox spacing="14"
          prefHeight="360"
          prefWidth="360"
          maxWidth="620"
          styleClass="dialog-card"
          style="-fx-padding: 24;">

        <Label text="Dettaglio sintomo" styleClass="dialog-title"/>

        <VBox spacing="10">
            <VBox spacing="4">
                <Label text="Descrizione" styleClass="dialog-field-label"/>
                <Label fx:id="descrizioneLabel" text="—" styleClass="page-title-accent"/>
            </VBox>

            <HBox spacing="12">
                <VBox spacing="4">
                    <Label text="Intensita" styleClass="dialog-field-label"/>
                    <Label fx:id="intensitaLabel" text="—" styleClass="page-subtitle"/>
                </VBox>
                <VBox spacing="4">
                    <Label text="Frequenza" styleClass="dialog-field-label"/>
                    <Label fx:id="frequenzaLabel" text="—" styleClass="page-subtitle"/>
                </VBox>
            </HBox>

            <VBox spacing="4">
                <Label text="Note" styleClass="dialog-field-label"/>
                <Label fx:id="noteLabel" text="—" styleClass="page-subtitle" wrapText="true"/>
            </VBox>

            <HBox spacing="12">
                <VBox spacing="4">
                    <Label text="Periodo" styleClass="dialog-field-label"/>
                    <Label fx:id="periodoLabel" text="—" styleClass="page-subtitle"/>
                </VBox>
                <VBox spacing="4">
                    <Label text="Registrato" styleClass="dialog-field-label"/>
                    <Label fx:id="timestampLabel" text="—" styleClass="page-subtitle"/>
                </VBox>
            </HBox>
        </VBox>

        <HBox spacing="12" alignment="CENTER_RIGHT">
            <Button text="Chiudi"
                    styleClass="btn-primary"
                    onAction="#handleClose"/>
        </HBox>
    </VBox>
</StackPane>
