<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="16" styleClass="dialog-roo" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univr.diabete.controller.FarmacoDoseDialogController">

    <VBox spacing="4">
        <Label styleClass="dialog-title" text="Imposta dosi farmaco"/>
    </VBox>

    <GridPane hgap="12" vgap="12">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" minWidth="150"/>
            <ColumnConstraints hgrow="ALWAYS"/>
        </columnConstraints>

        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>
        <Label prefHeight="19.0" prefWidth="150.0" styleClass="form-label" text="Assunzioni al giorno:"
               GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="assunzioniField" promptText="Es. 2" styleClass="rounded-field" GridPane.columnIndex="1"
                   GridPane.rowIndex="0"/>

        <Label styleClass="form-label" text="UnitÃ  per assunzione (mg):" GridPane.columnIndex="0"
               GridPane.rowIndex="1"/>
        <TextField fx:id="unitaField" promptText="Es. 500" styleClass="rounded-field" GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>
    </GridPane>

    <Label fx:id="errorLabel" managed="false" textFill="red" visible="false" wrapText="true"/>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button onAction="#handleCancel" styleClass="btn-secondary" text="Annulla"/>
        <Button onAction="#handleConfirm" styleClass="btn-primary" text="Conferma"/>
    </HBox>
</VBox>
