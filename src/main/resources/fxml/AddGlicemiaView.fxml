<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="16" styleClass="dialog-root" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univr.diabete.controller.AddGlicemiaController">

    <!-- padding esterno (spazio dal bordo finestra) -->
    <padding>
        <Insets bottom="12" left="12" right="12" top="12" />
    </padding>

    <!-- Card centrale -->
    <VBox prefWidth="380" spacing="16" styleClass="dialog-card">

        <!-- padding interno -->
        <padding>
            <Insets bottom="20" left="24" right="24" top="20" />
        </padding>

        <!-- Titolo -->
        <VBox spacing="4">
            <Label styleClass="dialog-title" text="Registra glicemia" />
        </VBox>

        <!-- Campo valore -->
        <HBox alignment="CENTER_LEFT" spacing="12">
            <Label styleClass="dialog-field-label" text="Valore (mg/dL):" />
            <Label layoutX="10.0" layoutY="16.0" prefWidth="30.0" styleClass="dialog-field-label" text="Valore (mg/dL):" visible="false" />
            <TextField fx:id="valoreField" alignment="TOP_LEFT" prefHeight="32.0" prefWidth="186.0" promptText="es. 105" styleClass="field-control" />
        </HBox>
        <HBox alignment="CENTER_LEFT" layoutX="34.0" layoutY="100.0" spacing="12">
            <Label styleClass="dialog-field-label" text="Momento:" />
            <Label prefHeight="19.0" prefWidth="57.0" styleClass="dialog-field-label" text="Momento:" visible="false" />
            <ComboBox fx:id="momentoChoice" prefHeight="40.0" prefWidth="191.0" promptText="Seleziona..." styleClass="field-control" />
        </HBox>
        <!-- Azioni -->
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button onAction="#handleCancel" styleClass="btn-ghost" text="Annulla" />
            <Button defaultButton="true" onAction="#handleSave" styleClass="btn-primary" text="Salva" />
        </HBox>

    </VBox>

</VBox>
