<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="16" styleClass="dialog-root" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univr.diabete.controller.AddAssunzioneController">

    <padding>
        <Insets bottom="12" left="12" right="12" top="12" />
    </padding>
    <VBox prefWidth="320" spacing="16" styleClass="dialog-card">

        <padding>
            <Insets bottom="20" left="24" right="24" top="20" />
        </padding>

        <Label styleClass="dialog-title" text="Registra assunzione" />

        <!-- Quantità -->
        <VBox spacing="4">
            <Label styleClass="dialog-field-label" text="Quantità assunta" />
            <TextField fx:id="quantitaField" styleClass="field-control" />
        </VBox>

        <!-- Data / Ora -->
        <VBox spacing="4">
            <Label styleClass="dialog-field-label" text="Data e ora" />
            <DatePicker fx:id="dateField" prefHeight="26.0" prefWidth="273.0" />
        </VBox>

        <!-- Orario -->
        <VBox spacing="4">
            <Label styleClass="dialog-field-label" text="Orario assunzione" />
            <TextField fx:id="timeField" promptText="HH:mm" styleClass="field-control" />
        </VBox>

        <Button maxWidth="Infinity" onAction="#handleConfirm" styleClass="btn-primary" text="Conferma" />

        <Button maxWidth="Infinity" onAction="#handleCancel" styleClass="btn-ghost" text="Annulla" />

    </VBox>
</VBox>
