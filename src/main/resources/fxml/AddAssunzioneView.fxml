<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.univr.diabete.controller.AddAssunzioneController"
           stylesheets="@../css/app.css"
           spacing="16"
           alignment="CENTER"
           styleClass="dialog-root">

    <children>
        <VBox spacing="16"
              prefWidth="320"
              styleClass="dialog-card">

            <children>

                <Label text="Registra assunzione"
                       styleClass="dialog-title"/>

                <!-- Quantità -->
                <VBox spacing="4">
                    <children>
                        <Label text="Quantità assunta"
                               styleClass="dialog-field-label"/>
                        <TextField fx:id="quantitaField"
                                   styleClass="field-control"/>
                    </children>
                </VBox>

                <!-- Data / Ora -->
                <VBox spacing="4">
                    <children>
                        <Label text="Data e ora"
                               styleClass="dialog-field-label"/>
                        <DatePicker fx:id="dateField"/>
                    </children>
                </VBox>

                <Button text="Conferma"
                        onAction="#handleConfirm"
                        styleClass="btn-primary"
                        maxWidth="Infinity"/>

                <Button text="Annulla"
                        onAction="#handleCancel"
                        styleClass="btn-ghost"
                        maxWidth="Infinity"/>

            </children>
            <padding>
                <Insets top="20" right="24" bottom="20" left="24"/>
            </padding>
        </VBox>
    </children>
    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>
</VBox>