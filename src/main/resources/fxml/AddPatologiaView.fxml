<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="dialog-root" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univr.diabete.controller.AddPatologiaController">

    <VBox alignment="TOP_CENTER" maxWidth="620" prefHeight="260" prefWidth="360" spacing="18" style="-fx-padding: 24;"
          styleClass="dialog-card">

        <Label styleClass="dialog-title" text="Nuova patologia"/>

        <VBox spacing="12" style="-fx-padding: 6 0 0 0;">

            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Nome patologia"/>
                <TextField fx:id="nomeField" styleClass="field-control"/>
            </VBox>

            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Data inizio (opzionale)"/>
                <DatePicker fx:id="dataInizioPicker" prefHeight="40.0" prefWidth="312.0" styleClass="field-control"/>
            </VBox>

        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="12">
            <Button onAction="#handleCancel" styleClass="btn-ghost" text="Annulla"/>
            <Button onAction="#handleSave" styleClass="btn-primary" text="Aggiungi"/>
        </HBox>
    </VBox>
</StackPane>
