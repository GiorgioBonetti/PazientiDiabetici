<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           stylesheets="@../css/app.css"
           fx:controller="it.univr.diabete.controller.AddDoctorController"
           styleClass="dialog-root">

    <children>
        <VBox spacing="18"
              alignment="TOP_CENTER"
              prefHeight="480"
              prefWidth="350"
              maxWidth="620"
              styleClass="dialog-card"
              style="-fx-padding: 24;">

            <Label fx:id="titleLabel" text="Nuovo diabetologo" styleClass="dialog-title"/>
            <Label fx:id="subtitleLabel" text="Inserisci i dati del nuovo diabetologo"
                   styleClass="dialog-subtitle"/>

            <VBox spacing="12" style="-fx-padding: 6 0 0 0;">

                <VBox spacing="4">
                    <Label text="Nome" styleClass="dialog-field-label"/>
                    <TextField fx:id="nomeField" styleClass="field-control"/>
                </VBox>

                <VBox spacing="4">
                    <Label text="Cognome" styleClass="dialog-field-label"/>
                    <TextField fx:id="cognomeField" styleClass="field-control"/>
                </VBox>

                <VBox spacing="4">
                    <Label text="Email" styleClass="dialog-field-label"/>
                    <TextField fx:id="emailField" styleClass="field-control"/>
                </VBox>

                <VBox spacing="4">
                    <Label text="Numero telefono" styleClass="dialog-field-label"/>
                    <TextField fx:id="telefonoField" styleClass="field-control"/>
                </VBox>

                <VBox spacing="4">
                    <Label text="Sesso" styleClass="dialog-field-label"/>
                    <ChoiceBox fx:id="sessoChoice" styleClass="field-control">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="M"/>
                                <String fx:value="F"/>
                                <String fx:value="Altro"/>
                            </FXCollections>
                        </items>
                    </ChoiceBox>
                </VBox>

                <VBox spacing="4">
                    <Label text="Laurea" styleClass="dialog-field-label"/>
                    <TextField fx:id="laureaField" styleClass="field-control"/>
                </VBox>

                <VBox spacing="4">
                    <Label text="Password iniziale" styleClass="dialog-field-label"/>
                    <PasswordField fx:id="passwordField" styleClass="field-control"/>
                </VBox>

            </VBox>

            <HBox spacing="12" alignment="CENTER_RIGHT">
                <Button text="Annulla"
                        styleClass="btn-ghost"
                        onAction="#handleCancel"/>
                <Button fx:id="saveButton" text="Crea diabetologo"
                        styleClass="btn-primary"
                        onAction="#handleSave"/>
            </HBox>
        </VBox>
    </children>
</StackPane>
