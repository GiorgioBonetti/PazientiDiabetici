<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane styleClass="dialog-root" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univr.diabete.controller.AddDoctorController">

    <VBox alignment="TOP_CENTER" maxWidth="620" prefHeight="480" prefWidth="350" spacing="18" style="-fx-padding: 24;"
          styleClass="dialog-card">

        <Label fx:id="titleLabel" styleClass="dialog-title" text="Nuovo diabetologo"/>

        <VBox spacing="12" style="-fx-padding: 6 0 0 0;">

            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Nome"/>
                <TextField fx:id="nomeField" styleClass="field-control"/>
            </VBox>

            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Cognome"/>
                <TextField fx:id="cognomeField" styleClass="field-control"/>
            </VBox>

            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Email"/>
                <TextField fx:id="emailField" styleClass="field-control"/>
            </VBox>

            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Numero telefono"/>
                <TextField fx:id="telefonoField" styleClass="field-control"/>
            </VBox>

            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Sesso"/>
                <ChoiceBox fx:id="sessoChoice" prefHeight="40.0" prefWidth="120.0" styleClass="field-control">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="M"/>
                            <String fx:value="F"/>
                            <String fx:value="Altro"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>
            </VBox>

            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Laurea"/>
                <TextField fx:id="laureaField" styleClass="field-control"/>
            </VBox>

            <VBox spacing="4">
                <Label styleClass="dialog-field-label" text="Password iniziale"/>
                <PasswordField fx:id="passwordField" styleClass="field-control"/>
            </VBox>

        </VBox>

        <HBox alignment="CENTER_RIGHT" spacing="12">
            <Button onAction="#handleCancel" styleClass="btn-ghost" text="Annulla"/>
            <Button fx:id="saveButton" onAction="#handleSave" styleClass="btn-primary" text="Crea diabetologo"/>
        </HBox>
    </VBox>
</StackPane>
