<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.univr.diabete.controller.FarmacoController"
      spacing="16"
      style="-fx-padding: 8 16 16 16;">

    <children>

        <!-- HEADER -->
        <HBox spacing="12" alignment="CENTER_LEFT">
            <children>
                <VBox spacing="4">
                    <children>
                        <Label text="Farmaci disponibili"
                               styleClass="page-title"/>
                        <Label text="Gestisci il catalogo dei farmaci utilizzabili nelle terapie."
                               styleClass="page-subtitle"
                               wrapText="true"/>
                    </children>
                </VBox>

                <Pane HBox.hgrow="ALWAYS"/>

                <!-- Search -->
                <TextField fx:id="searchField"
                           promptText="Cerca per nome o marca..."
                           prefWidth="260"
                           styleClass="rounded-field"/>
            </children>
        </HBox>

        <!-- CARD CON TABELLA -->
        <BorderPane styleClass="card">

            <center>
                <VBox spacing="8" style="-fx-padding: 12 16 16 16;">
                    <children>
                        <TableView fx:id="farmacoTable"
                                   prefHeight="420"
                                   styleClass="rounded-table">
                            <columns>
                                <TableColumn fx:id="colNome"
                                             text="Nome"
                                             prefWidth="260"/>
                                <TableColumn fx:id="colMarca"
                                             text="Marca"
                                             prefWidth="260"/>
                            </columns>
                        </TableView>
                    </children>
                </VBox>
            </center>

            <!-- BARRA PULSANTI IN BASSO -->
            <bottom>
                <HBox spacing="8"
                      alignment="CENTER_RIGHT"
                      style="-fx-padding: 8 16 14 16;">
                    <children>
                        <Button fx:id="newButton"
                                text="Nuovo farmaco"
                                onAction="#handleAdd"
                                styleClass="btn-primary"/>

                        <Button fx:id="editButton"
                                text="Modifica"
                                onAction="#handleEdit"
                                styleClass="btn-secondary"/>

                        <Button fx:id="deleteButton"
                                text="Elimina"
                                onAction="#handleDelete"
                                styleClass="btn-secondary"/>
                    </children>
                </HBox>
            </bottom>
        </BorderPane>

    </children>
</VBox>