<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.univr.diabete.controller.FarmacoController"
      spacing="16"
      style="-fx-padding: 8 16 16 16;">

    <children>

        <!-- HEADER -->
        <HBox spacing="12" alignment="CENTER_LEFT">
            <children>
                <VBox spacing="4">
                    <children>
                        <Label text="Farmaci disponibili"
                               styleClass="page-title"/>
                        <Label text="Gestisci il catalogo dei farmaci utilizzabili nelle terapie."
                               styleClass="page-subtitle"
                               wrapText="true"/>
                    </children>
                </VBox>

                <Pane HBox.hgrow="ALWAYS"/>

                <!-- Search -->
                <TextField fx:id="searchField"
                           promptText="Cerca per nome o marca..."
                           prefWidth="260"
                           styleClass="rounded-field"/>

                <Button fx:id="newButton"
                        text="Nuovo farmaco"
                        onAction="#handleAdd"
                        styleClass="btn-primary"/>
            </children>
        </HBox>

        <!-- CARD CON LISTA -->
        <BorderPane styleClass="card">
            <center>
                <ListView fx:id="farmacoListView"
                          prefHeight="420.0"
                          style="-fx-background-color: transparent; -fx-padding: 10;"/>
            </center>
        </BorderPane>

    </children>
</VBox>
