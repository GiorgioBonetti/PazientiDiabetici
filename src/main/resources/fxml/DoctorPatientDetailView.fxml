<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.univr.diabete.controller.DoctorPatientDetailController"
      spacing="16"
      style="-fx-padding: 16 24 24 24;">
    <children>

        <!-- Titolo -->
        <VBox spacing="4">
            <children>
                <Label text="Scheda paziente" styleClass="page-title"/>
                <Label fx:id="patientNameLabel"
                       text="Nome Cognome"
                       styleClass="page-subtitle"/>
            </children>
        </VBox>

        <!-- Card dati paziente -->
        <VBox styleClass="card" spacing="12">
            <children>
                <HBox styleClass="card-header" alignment="CENTER_LEFT" spacing="8">
                    <children>
                        <Label text="Dati anagrafici" styleClass="card-title"/>
                    </children>
                </HBox>

                <GridPane hgap="16" vgap="10" style="-fx-padding: 12 16 16 16;">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                        <ColumnConstraints percentWidth="25"/>
                    </columnConstraints>

                    <!-- Riga 1 -->
                    <children>
                        <Label text="Nome" GridPane.rowIndex="0" GridPane.columnIndex="0"
                               styleClass="field-label"/>
                        <TextField fx:id="nomeField" GridPane.rowIndex="1" GridPane.columnIndex="0"
                                   styleClass="field-control"/>

                        <Label text="Cognome" GridPane.rowIndex="0" GridPane.columnIndex="1"
                               styleClass="field-label"/>
                        <TextField fx:id="cognomeField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                                   styleClass="field-control"/>

                        <Label text="Email" GridPane.rowIndex="0" GridPane.columnIndex="2"
                               styleClass="field-label"/>
                        <TextField fx:id="emailField" GridPane.rowIndex="1" GridPane.columnIndex="2"
                                   styleClass="field-control"/>

                        <Label text="Telefono" GridPane.rowIndex="0" GridPane.columnIndex="3"
                               styleClass="field-label"/>
                        <TextField fx:id="telefonoField" GridPane.rowIndex="1" GridPane.columnIndex="3"
                                   styleClass="field-control"/>

                        <!-- Riga 2 -->
                        <Label text="Data di nascita" GridPane.rowIndex="2" GridPane.columnIndex="0"
                               styleClass="field-label"/>
                        <DatePicker fx:id="dataNascitaPicker"
                                    GridPane.rowIndex="3" GridPane.columnIndex="0"
                                    styleClass="field-control"/>

                        <Label text="Sesso" GridPane.rowIndex="2" GridPane.columnIndex="1"
                               styleClass="field-label"/>
                        <ChoiceBox fx:id="sessoChoice"
                                   GridPane.rowIndex="3" GridPane.columnIndex="1"
                                   styleClass="field-control"/>

                        <Label text="Codice fiscale" GridPane.rowIndex="2" GridPane.columnIndex="2"
                               styleClass="field-label"/>
                        <TextField fx:id="codiceFiscaleField"
                                   GridPane.rowIndex="3" GridPane.columnIndex="2"
                                   styleClass="field-control"/>

                        <Label text="Password (iniziale)" GridPane.rowIndex="2" GridPane.columnIndex="3"
                               styleClass="field-label"/>
                        <PasswordField fx:id="passwordField"
                                       GridPane.rowIndex="3" GridPane.columnIndex="3"
                                       styleClass="field-control"/>
                    </children>
                </GridPane>
            </children>
        </VBox>

        <!-- Pulsanti -->
        <HBox spacing="8" alignment="CENTER_RIGHT">
            <children>
                <Button text="Annulla" styleClass="btn-ghost"
                        onAction="#handleCancelChanges"/>
                <Button text="Salva modifiche" styleClass="btn-primary"
                        onAction="#handleSave"/>
            </children>
        </HBox>

    </children>
</VBox>