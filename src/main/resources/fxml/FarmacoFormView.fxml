<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="16" style="-fx-padding: 18 20 18 20;" styleClass="dialog-root" stylesheets="@../css/app.css"
      xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.univr.diabete.controller.FarmacoFormController">

    <!-- Header -->
    <VBox spacing="4">
        <Label fx:id="titleLabel" styleClass="dialog-title" text="Nuovo farmaco"/>
    </VBox>

    <!-- Campi -->
    <VBox spacing="10">
        <VBox spacing="4">
            <Label styleClass="form-label" text="Nome farmaco"/>
            <TextField fx:id="nomeField" promptText="Es. Metformina" styleClass="rounded-field"/>
        </VBox>

        <VBox spacing="4">
            <Label styleClass="form-label" text="Marca (opzionale)"/>
            <TextField fx:id="marcaField" promptText="Es. Generic" styleClass="rounded-field"/>
        </VBox>

    </VBox>

    <!-- Errore -->
    <Label fx:id="errorLabel" managed="false" textFill="red" visible="false" wrapText="true"/>

    <!-- Pulsanti -->
    <HBox alignment="CENTER_RIGHT" spacing="10">
        <Button onAction="#handleCancel" styleClass="btn-secondary" text="Annulla"/>
        <Button onAction="#handleSave" styleClass="btn-primary" text="Salva"/>
    </HBox>

</VBox>
