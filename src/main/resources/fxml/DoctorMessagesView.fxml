<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="12" style="-fx-padding: 8 16 16 16;" stylesheets="@../css/app.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.univr.diabete.controller.DoctorMessagesController">

    <VBox spacing="4">
        <Label styleClass="page-title" text="Messaggi" />
    </VBox>

    <HBox spacing="12" VBox.vgrow="ALWAYS">
        <BorderPane prefWidth="300" styleClass="card">
            <top>
                <HBox alignment="CENTER_LEFT" spacing="6" styleClass="card-header">
                    <Label id="conversationsLabel" styleClass="card-title" text="Conversazioni" />
                </HBox>
            </top>
            <center>
                <ListView fx:id="conversationsListView" prefHeight="420" styleClass="message-thread-list" />
            </center>
        </BorderPane>

        <BorderPane styleClass="card" HBox.hgrow="ALWAYS">
            <top>
                <VBox spacing="2" styleClass="card-header">
                    <Label id="selectPatientLabel" fx:id="chatTitleLabel" text="Seleziona un paziente" />
                    <Label fx:id="chatSubtitleLabel" styleClass="card-subtitle" text="â€”" />
                </VBox>
            </top>
            <center>
                <ListView fx:id="messagesListView" prefHeight="420" styleClass="message-list" />
            </center>
            <bottom>
                <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 10 12;">
                    <TextField fx:id="messageInput" promptText="Scrivi un messaggio..." styleClass="field-control" HBox.hgrow="ALWAYS" />
                    <Button fx:id="sendButton" onAction="#handleSend" styleClass="btn-primary" text="Invia" />
                </HBox>
            </bottom>
        </BorderPane>
    </HBox>
</VBox>
