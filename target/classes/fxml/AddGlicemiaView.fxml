<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.univr.diabete.controller.AddGlicemiaController"
      stylesheets="@../css/app.css"
      spacing="16"
      alignment="CENTER"
      styleClass="dialog-root">

    <children>

        <!-- Card centrale -->
        <VBox spacing="16"
              prefWidth="380"
              styleClass="dialog-card">
            <children>

                <!-- Titolo -->
                <VBox spacing="4">
                    <children>
                        <Label text="Registra glicemia"
                               styleClass="dialog-title"/>
                        <Label text="Inserisci il valore di glicemia rilevato."
                               wrapText="true"
                               styleClass="dialog-subtitle"/>
                    </children>
                </VBox>

                <!-- Campo valore -->
                <HBox spacing="12" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Valore (mg/dL):"
                               styleClass="dialog-field-label"/>
                        <TextField fx:id="valoreField"
                                   promptText="es. 105"
                                   styleClass="field-control"
                                   prefWidth="180"/>
                    </children>
                </HBox>
                <Label text="Momento" styleClass="dialog-field-label"/>
                <ComboBox fx:id="momentoChoice"
                          promptText="Seleziona momento"
                          styleClass="field-control"
                          prefWidth="180"/>
                <!-- Azioni -->
                <HBox spacing="10"
                      alignment="CENTER_RIGHT">
                    <children>
                        <Button text="Annulla"
                                onAction="#handleCancel"
                                styleClass="btn-ghost"/>
                        <Button text="Salva"
                                onAction="#handleSave"
                                defaultButton="true"
                                styleClass="btn-primary"/>
                    </children>
                </HBox>

            </children>

            <!-- padding interno -->
            <padding>
                <Insets top="20" right="24" bottom="20" left="24"/>
            </padding>
        </VBox>

    </children>

    <!-- padding esterno (spazio dal bordo finestra) -->
    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>
</VBox>