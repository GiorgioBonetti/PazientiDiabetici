<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.univr.diabete.controller.FarmacoDoseDialogController"
      spacing="16"
      styleClass="dialog-roo"
      stylesheets="@../css/app.css">

    <children>
        <VBox spacing="4">
            <children>
                <Label text="Imposta dosi farmaco" styleClass="dialog-title"/>
                <Label fx:id="farmacoNameLabel"
                       styleClass="dialog-subtitle"/>
            </children>
        </VBox>

        <GridPane hgap="12" vgap="12">
            <columnConstraints>
                <ColumnConstraints minWidth="150" halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <children>
                <Label text="Assunzioni al giorno"
                       GridPane.rowIndex="0" GridPane.columnIndex="0"
                       styleClass="form-label"/>
                <TextField fx:id="assunzioniField"
                           promptText="Es. 2"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"
                           styleClass="rounded-field"/>

                <Label text="UnitÃ  per assunzione (mg)"
                       GridPane.rowIndex="1" GridPane.columnIndex="0"
                       styleClass="form-label"/>
                <TextField fx:id="unitaField"
                           promptText="Es. 500"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"
                           styleClass="rounded-field"/>
            </children>
        </GridPane>

        <Label fx:id="errorLabel"
               textFill="red"
               wrapText="true"
               visible="false"
               managed="false"/>

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <children>
                <Button text="Annulla" onAction="#handleCancel"
                        styleClass="btn-secondary"/>
                <Button text="Conferma" onAction="#handleConfirm"
                        styleClass="btn-primary"/>
            </children>
        </HBox>
    </children>
</VBox>