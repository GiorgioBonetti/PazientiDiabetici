<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.univr.diabete.controller.AddTherapyController"
      spacing="18"
      styleClass="dialog-roo"
      prefHeight="680"
      prefWidth="380"

      stylesheets="@../css/app.css">

    <children>

        <!-- HEADER -->
        <VBox spacing="4" alignment="CENTER_LEFT">
            <children>
                <Label alignment="CENTER" text="Nuova terapia" styleClass="dialog-title"/>
                <Label text="Imposta il periodo e i farmaci per la nuova terapia"
                       styleClass="dialog-subtitle"/>
            </children>
        </VBox>
        <!-- ðŸ‘‡ Nuovo: nome terapia -->
        <VBox spacing="4" style="-fx-padding: 8 0 0 0;">
            <children>
                <Label text="Nome terapia" styleClass="form-label"/>
                <TextField fx:id="nomeTerapiaField"
                           promptText="Es. Terapia mattutina gennaio"
                           styleClass="rounded-field"/>
            </children>
        </VBox>
        <!-- DATE SECTION: label sopra, campo sotto -->
        <VBox spacing="16" style="-fx-padding: 4 0 0 0;">
            <children>

                <VBox spacing="4">
                    <children>
                        <Label text="Data inizio" styleClass="form-label"/>
                        <DatePicker fx:id="dataInizioPicker"
                                    styleClass="rounded-field"/>
                    </children>
                </VBox>

                <VBox spacing="4">
                    <children>
                        <Label text="Data fine" styleClass="form-label"/>
                        <DatePicker fx:id="dataFinePicker"
                                    styleClass="rounded-field"/>
                    </children>
                </VBox>

            </children>
        </VBox>
        <Separator/>

        <!-- FARMACI SECTION -->
        <VBox spacing="8">
            <children>
                <Label text="Farmaci della terapia"
                       styleClass="section-title"/>

                <!-- Search + lista farmaci esistenti -->
                <TextField fx:id="searchFarmacoField"
                           promptText="Cerca farmaco esistente..."
                           styleClass="rounded-field"/>

                <ListView fx:id="farmacoListView"
                          prefHeight="160"
                          style="-fx-background-color: transparent; -fx-padding: 4;"
                          styleClass="farmaco-list-view"
                          />

                <!-- Card scrollabile orizzontale con i farmaci selezionati -->
                <Label text="Farmaci selezionati"
                       styleClass="section-title-small"/>

                <ScrollPane fx:id="selectedFarmaciScroll"
                            hbarPolicy="AS_NEEDED"
                            vbarPolicy="NEVER"
                            pannable="false"
                            prefHeight="120"
                            styleClass="chip-scroll">
                    <content>
                        <HBox fx:id="selectedFarmaciPane"
                              spacing="8"
                              style="-fx-padding: 6 6 6 6;"/>
                    </content>
                </ScrollPane>

            </children>
        </VBox>

        <!-- ERRORE -->
        <Label fx:id="errorLabel"
               textFill="red"
               wrapText="true"
               visible="false"
               managed="false"/>

        <!-- BUTTONS -->
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <children>
                <Button text="Annulla"
                        onAction="#handleCancel"
                        styleClass="btn-secondary"/>
                <Button text="Crea terapia"
                        onAction="#handleSave"
                        styleClass="btn-primary"/>
            </children>
        </HBox>

    </children>
</VBox>