<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10">
    <children>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Pazienti" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <ComboBox fx:id="cmbFiltroSeverita" promptText="SeveritÃ "/>
                <ComboBox fx:id="cmbPeriodo" promptText="Periodo"/>
                <Button text="Aggiorna" fx:id="btnRefresh"/>
            </children>
        </HBox>

        <TableView fx:id="tblPazienti" prefHeight="600.0">
            <columns>
                <TableColumn fx:id="colNome" text="Paziente" prefWidth="220"/>
                <TableColumn fx:id="colOor" text="% Out-of-Range (7g)" prefWidth="170"/>
                <TableColumn fx:id="colAdh" text="Aderenza 7g" prefWidth="140"/>
                <TableColumn fx:id="colUlt" text="Ultima glicemia" prefWidth="160"/>
                <TableColumn fx:id="colStato" text="Stato" prefWidth="120"/>
                <TableColumn fx:id="colAzioni" text="Azioni" prefWidth="160"/>
            </columns>
            <placeholder><Label text="Nessun paziente"/></placeholder>
        </TableView>
    </children>
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
</VBox>
