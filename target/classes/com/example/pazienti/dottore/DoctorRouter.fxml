<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefWidth="1200.0" prefHeight="800.0">
    <left>
        <VBox spacing="8">
            <children>
                <Label text="Navigazione" style="-fx-font-weight: bold;"/>
                <Button text="Dashboard" fx:id="btnDash"/>
                <Button text="Pazienti" fx:id="btnPazienti"/>
                <Button text="Terapie" fx:id="btnTerapie"/>
                <Button text="Alert" fx:id="btnAlert"/>
                <Button text="Impostazioni" fx:id="btnImpostazioni"/>
            </children>
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
        </VBox>
    </left>
    <!-- qui verranno caricati gli altri FXML -->
    <center>
        <StackPane fx:id="contentArea"/>
    </center>
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Area Medico" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchField" promptText="Cerca paziente..."/>
                <Button text="Cerca" fx:id="btnSearch"/>
            </children>
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
        </HBox>
    </top>
</BorderPane>
