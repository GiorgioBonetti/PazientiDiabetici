<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pazienti.controller.TerapieController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Gestione Terapie" />
                <Button fx:id="btnAddTerapia" onAction="#handleAddTerapia" text="Aggiungi Terapia" />
            </children>
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
        </HBox>
    </top>
    <center>
        <TableView fx:id="tblTerapie">
            <columns>
                <TableColumn fx:id="colPaziente" prefWidth="200" text="Paziente" />
                <TableColumn fx:id="colFarmaco" prefWidth="200" text="Farmaco" />
                <TableColumn fx:id="colDosaggio" prefWidth="150" text="Dosaggio" />
                <TableColumn fx:id="colFrequenza" prefWidth="150" text="Frequenza" />
            </columns>
        </TableView>
    </center>
</BorderPane>
