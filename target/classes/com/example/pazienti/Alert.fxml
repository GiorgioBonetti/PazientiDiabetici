<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pazienti.controller.AlertController">
    <top>
        <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Alert Pazienti" BorderPane.alignment="CENTER" />
    </top>
    <center>
        <TableView fx:id="tblAlert">
            <columns>
                <TableColumn fx:id="colPaziente" prefWidth="200" text="Paziente" />
                <TableColumn fx:id="colTipoAlert" prefWidth="200" text="Tipo Alert" />
                <TableColumn fx:id="colDataOra" prefWidth="200" text="Data/Ora" />
                <TableColumn fx:id="colDettagli" prefWidth="300" text="Dettagli" />
            </columns>
        </TableView>
    </center>
</BorderPane>
