<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pazienti.controller.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="15.0">
            <children>
                <Label fx:id="titleLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Login" />
                <TextField fx:id="usernameField" prefWidth="220.0" promptText="Username" />
                <PasswordField fx:id="passwordField" prefWidth="220.0" promptText="Password" />
                <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="220.0" text="Accedi" />
            </children>
            <padding><Insets bottom="40" left="20" right="20" top="40" /></padding>
        </VBox>
    </children>
</StackPane>
