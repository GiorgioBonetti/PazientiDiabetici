<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="TOP_LEFT" spacing="12" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Impostazioni Profilo" />
        <Separator />

        <!-- Dati anagrafici -->
        <GridPane hgap="10" vgap="8">
            <children>
                <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtNome" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Cognome:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="txtCognome" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Data di nascita:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="txtDataNascita" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Codice fiscale:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="txtCodiceFiscale" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <!-- Dati di contatto -->
        <GridPane hgap="10" vgap="8">
            <children>
                <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtEmail" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Telefono:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="txtTelefono" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Indirizzo:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="txtIndirizzo" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <!-- Info professionali -->
        <GridPane hgap="10" vgap="8">
            <children>
                <Label text="Ruolo:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txtRuolo" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="Specializzazione (se medico):" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField fx:id="txtSpecializzazione" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Note aggiuntive:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextArea fx:id="txtNote" prefRowCount="3" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            </children>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>

        <!-- Pulsanti -->
        <HBox spacing="10">
            <children>
                <Button fx:id="btnSalva" text="Salva modifiche" />
                <Button fx:id="btnAnnulla" text="Annulla" />
            </children>
        </HBox>
    </children>

    <padding>
        <Insets bottom="12" left="12" right="12" top="12" />
    </padding>
</VBox>
