<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefWidth="1200.0" prefHeight="800.0">
    <left>
        <VBox spacing="8">
            <children>
                <Label text="Admin" style="-fx-font-weight: bold;"/>
                <Button text="Pazienti" fx:id="btnPatients"/>
                <Button text="Medici" fx:id="btnDoctors"/>
                <Button text="Messaggi" fx:id="btnMessages"/>
                <Separator/>
                <Button text="Impostazioni Admin" fx:id="btnSettings"/>
            </children>
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
        </VBox>
    </left>
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Pannello Amministratore" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <TextField fx:id="searchField" promptText="Cerca..."/>
                <Button text="Cerca" fx:id="btnSearch"/>
            </children>
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
        </HBox>
    </top>
    <center>
        <StackPane fx:id="contentArea"/>
    </center>
	<!-- CONTENT AREA -->
<center>
<StackPane fx:id="contentArea" styleClass="content">
<!-- Placeholder iniziale, sostituito via controller -->
<VBox alignment="CENTER" spacing="8">
<Label text="Benvenuto nella Console Admin" styleClass="welcome-title"/>
<Label text="Seleziona una sezione dalla sidebar o usa la ricerca" styleClass="muted"/>
</VBox>
</StackPane>
</center>
</BorderPane>
