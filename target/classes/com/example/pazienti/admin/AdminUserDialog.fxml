<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <headerText>Utente</headerText>
    <content>
        <VBox spacing="10">
            <children>
                <TitledPane text="Credenziali">
                    <content>
                        <GridPane hgap="10" vgap="8">
                            <children>
                                <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtEmail" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Ruolo:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <ComboBox fx:id="cmbRole" promptText="PATIENT / DOCTOR" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Password iniziale:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <PasswordField fx:id="txtPwd" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>

                <TitledPane text="Anagrafica">
                    <content>
                        <GridPane hgap="10" vgap="8">
                            <children>
                                <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtNome" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Cognome:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtCognome" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Telefono:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtTelefono" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>

                <TitledPane text="Dati specifici (medico)">
                    <content>
                        <GridPane hgap="10" vgap="8">
                            <children>
                                <Label text="Specializzazione:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtSpec" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Numero Albo (opzionale):" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <TextField fx:id="txtAlbo" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>
            </children>
            <padding><Insets top="5" right="5" bottom="5" left="5"/></padding>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType text="Salva" buttonData="OK_DONE"/>
        <ButtonType text="Annulla" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>
