<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10">
    <children>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Pazienti" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <Button text="Nuovo Paziente" fx:id="btnNewPatient"/>
                <Button text="Assegna/Modifica Medico" fx:id="btnAssignDoctor"/>
                <Button text="Aggiorna" fx:id="btnRefresh"/>
            </children>
        </HBox>

        <TableView fx:id="tblPatients" prefHeight="620.0">
            <columns>
                <TableColumn fx:id="colPNome" text="Nome" prefWidth="160"/>
                <TableColumn fx:id="colPCognome" text="Cognome" prefWidth="160"/>
                <TableColumn fx:id="colPEmail" text="Email" prefWidth="220"/>
                <TableColumn fx:id="colPTel" text="Telefono" prefWidth="140"/>
                <TableColumn fx:id="colMedRef" text="Medico di riferimento" prefWidth="240"/>
                <TableColumn fx:id="colAzioni" text="Azioni" prefWidth="160"/>
            </columns>
            <placeholder><Label text="Nessun paziente"/></placeholder>
        </TableView>
    </children>
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
</VBox>
