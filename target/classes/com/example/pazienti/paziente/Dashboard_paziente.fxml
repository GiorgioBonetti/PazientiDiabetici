<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pazienti.controller.paziente.DashboardPazienteController">

    <!-- TOP: Titolo -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <children>
                <Label fx:id="titleLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Dashboard Paziente" />
            </children>
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
        </HBox>
    </top>

    <!-- LEFT: Alert -->
    <left>
        <VBox spacing="8">
            <children>
                <Label fx:id="alertLabel" style="-fx-font-weight: bold;" text="Alert attivi" />
                <ListView fx:id="listAlert" prefWidth="260.0">
                    <placeholder>
                        <Label text="Nessun alert" />
                    </placeholder>
                </ListView>
            </children>
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
        </VBox>
    </left>

    <!-- CENTER: Sintomi (con associazione patologia visibile) + Patologie -->
    <center>
        <VBox spacing="14">
            <children>

                <!-- SEZIONE SINTOMI -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label fx:id="sintomiLabel" style="-fx-font-weight: bold;" text="Sintomi" />
                        <Button fx:id="addSintomoButton" onAction="#handleAddSintomo" text="Aggiungi sintomo" />
                    </children>
                </HBox>

                <TableView fx:id="tblSintomi" prefHeight="240.0">
                    <columns>
                        <TableColumn fx:id="colSintomo" prefWidth="220" text="Sintomo" />
                        <TableColumn fx:id="colDataInizio" prefWidth="140" text="Data inizio" />
                        <TableColumn fx:id="colDataFine" prefWidth="140" text="Data fine" />
                        <TableColumn fx:id="colPatologiaAssociata" prefWidth="220" text="Patologia associata" />
                        <TableColumn fx:id="colNoteSintomi" prefWidth="260" text="Note" />
                    </columns>
                    <placeholder>
                        <Label text="Nessun sintomo registrato" />
                    </placeholder>
                </TableView>

                <Separator />

                <!-- SEZIONE PATOLOGIE -->
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <children>
                        <Label fx:id="patologieLabel" style="-fx-font-weight: bold;" text="Patologie" />
                        <Button fx:id="addPatologiaButton" text="Aggiungi patologia" />
                    </children>
                </HBox>

                <TableView fx:id="tblPatologie" prefHeight="240.0">
                    <columns>
                        <TableColumn fx:id="colNomePatologia" prefWidth="240" text="Patologia" />
                        <TableColumn fx:id="colDataDiagnosi" prefWidth="160" text="Data diagnosi" />
                        <TableColumn fx:id="colInCorso" prefWidth="120" text="In corso" />
                        <TableColumn fx:id="colNotePatologie" prefWidth="300" text="Note" />
                        <!-- Colonna azioni: verrÃ  popolata via cellFactory nel controller -->
                        <TableColumn fx:id="colAzioni" prefWidth="140" text="Azioni" />
                    </columns>
                    <placeholder>
                        <Label text="Nessuna patologia registrata" />
                    </placeholder>
                </TableView>

            </children>
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
        </VBox>
    </center>

    <!-- BOTTOM: Azioni generali -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <children>
                <Button fx:id="btnRefresh" text="Aggiorna" />
                <Button fx:id="btnEsci" text="Esci" />
            </children>
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
        </HBox>
    </bottom>

</BorderPane>
