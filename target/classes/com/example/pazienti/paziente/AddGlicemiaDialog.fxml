<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.pazienti.controller.paziente.AddGlicemiaDialogController">
    <content>
        <GridPane hgap="8" vgap="8">
            <Label fx:id="headerLabel" alignment="CENTER" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Aggiungi misurazione" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
            <Label text="Data/Ora:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField fx:id="dataOraField" promptText="gg/mm/aaaa hh:mm" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Contesto:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <ComboBox fx:id="contestoComboBox" promptText="pre-pasto / 2h post" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Valore (mg/dL):" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <TextField fx:id="valoreField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <Label text="Note:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <TextArea fx:id="noteArea" prefRowCount="2" GridPane.columnIndex="1" GridPane.rowIndex="4" />

            <Button fx:id="saveButton" onAction="#handleSave" text="Salva" GridPane.columnIndex="0" GridPane.rowIndex="5" />
            <Button fx:id="cancelButton" onAction="#handleCancel" text="Annulla" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <columnConstraints>
                <ColumnConstraints minWidth="50" />
                <ColumnConstraints minWidth="100" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="30.0" />
                <RowConstraints minHeight="30.0" />
                <RowConstraints minHeight="30.0" />
                <RowConstraints minHeight="30.0" />
                <RowConstraints minHeight="50.0" />
                <RowConstraints />
            </rowConstraints>
        </GridPane>
    </content>
    <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
</DialogPane>
