<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10" prefHeight="800.0" prefWidth="1200.0">
    <children>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Sintomi" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Button text="Aggiungi sintomo" fx:id="btnAddSintomo"/>
                <Button text="Aggiorna" fx:id="btnRefresh"/>
            </children>
        </HBox>

        <TableView fx:id="tblSintomi">
            <columns>
                <TableColumn text="Sintomo" prefWidth="220"/>
                <TableColumn text="Data inizio" prefWidth="140"/>
                <TableColumn text="Data fine" prefWidth="140"/>
                <TableColumn text="Patologia associata" prefWidth="220"/>
                <TableColumn text="Note" prefWidth="300"/>
                <TableColumn text="Azioni" prefWidth="140"/>
            </columns>
            <placeholder><Label text="Nessun sintomo"/></placeholder>
        </TableView>
    </children>
    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
</VBox>
