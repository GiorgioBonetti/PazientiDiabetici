<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" prefHeight="800.0" prefWidth="1200.0">
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Terapia personale" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Button text="Aggiungi assunzione" fx:id="btnAddIntake"/>
                <Button text="Aggiorna" fx:id="btnRefresh"/>
            </children>
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.45">
            <items>
                <VBox spacing="8">
                    <children>
                        <Label text="Prescrizioni attive" style="-fx-font-weight: bold;"/>
                        <TableView fx:id="tblPrescrizioni">
                            <columns>
                                <TableColumn text="Farmaco" prefWidth="180"/>
                                <TableColumn text="Dose" prefWidth="120"/>
                                <TableColumn text="Frequenza/die" prefWidth="120"/>
                                <TableColumn text="Indicazioni" prefWidth="220"/>
                            </columns>
                            <placeholder><Label text="Nessuna terapia"/></placeholder>
                        </TableView>
                    </children>
                    <padding><Insets top="0" right="10" bottom="0" left="10"/></padding>
                </VBox>

                <VBox spacing="8">
                    <children>
                        <Label text="Assunzioni registrate" style="-fx-font-weight: bold;"/>
                        <TableView fx:id="tblAssunzioni">
                            <columns>
                                <TableColumn text="Data/Ora" prefWidth="160"/>
                                <TableColumn text="Farmaco" prefWidth="180"/>
                                <TableColumn text="Dose" prefWidth="120"/>
                                <TableColumn text="Con pasto" prefWidth="100"/>
                                <TableColumn text="Note" prefWidth="220"/>
                                <TableColumn text="Azioni" prefWidth="140"/>
                            </columns>
                            <placeholder><Label text="Nessuna assunzione"/></placeholder>
                        </TableView>
                    </children>
                    <padding><Insets top="0" right="10" bottom="0" left="10"/></padding>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
